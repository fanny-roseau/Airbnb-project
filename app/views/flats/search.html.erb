<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h1 class = "text-center">Results of your research</h1>
        <% @flats.each do |flat| %>
          <div class = "flat-card">
            <% if flat.picture.exists? %>
              <%= image_tag flat.picture.url(:medium) %>
            <% else %>
              <%= image_tag "defopic.png"%>
            <% end %>
            <div class="flat-card-text">
              <p><%= link_to(flat.title, user_flat_path(flat.user_id,flat)) %></p>
              <p><strong><%= flat.title %></strong></p>
              <p><strong>Propriété : </strong><%= flat.property_type %> - <%= flat.room_type %></p>
            </div>
          </div>
        <% end %>
    </div>
    <div class="col-xs-6">
      <div id="map" style="width: 100%; height: 600px;"></div>
        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).on('ready', function() {
              handler = Gmaps.build('Google');
              handler.buildMap({ internal: { id: 'map' } }, function(){
                markers = handler.addMarkers(<%= raw @markers.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
              });
            })
          <% end %>
        <% end %>
    </div>
  </div>
</div>



