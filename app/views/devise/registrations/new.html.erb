<div id="banner">
  <div class="sign-in-box">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <%= f.input :first_name, placeholder: 'Prénom', required: true, autofocus: true, label: false, input_html: { class: 'decorative-input-name' } %>
          <%= f.input :last_name, placeholder: 'Nom', required: true, label: false, input_html: { class: 'decorative-input-name' } %>
          <%= f.input :email, placeholder: 'Adresse e-mail', required: true, label: false, input_html: { class: 'decorative-input-email' }%>
          <%= f.input :password, placeholder: 'Mot de passe', required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false, input_html: { class: 'decorative-input-password' } %>

          <%= f.input :password_confirmation, placeholder: 'Confirmation mot de passe', required: true, label: false, input_html: { class: 'decorative-input-password' } %>

          <div>
            <strong>Anniversaire</strong>
          </div>
          <div class="form-inline">
          <%= f.input :birthday_month, collection: ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"], required: true, prompt: "Mois", label: false, input_html: { class: 'decorative-input-date size-box-month' } %>
          <%= f.input :birthday_day, collection: 1..31, required: true, prompt: "Jour", label: false, input_html: { class: 'decorative-input-date size-box-day' } %>
          <%= f.input :birthday_year, collection: 1895..2015, required: true, prompt: "Année", label: false, input_html: { class: 'decorative-input-date size-box-year' } %>
          </div>

          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block", value: "Inscription" %>
        <% end %>
  </div>
</div>
